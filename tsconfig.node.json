{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ESNext",
      "es6",
      "dom"
    ],
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*",
    "packages/shared/**/*"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "**/dist",
    "playground/**/*"
  ]
}
