{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": [
      "ESNext",
      "es6",
      "dom"
    ],
    "types": [
      "node"
    ],
    "rootDir": "./packages",
    "skipLibCheck": true
  },
  "include": [
    "packages/components",
    "packages/shared"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "**/dist",
    "**/node_modules/**",
    "**/demo/**"
  ]
}
